{
  "name": "chaoscipher-elite-hacking-mastery",
  "private": true,
  "version": "1.0.0",
  "description": "Chaos Cipher - Elite Hacking Mastery",
  "author": "Chaos Operator",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "cross-env NODE_ENV=development electron .",
    "electron:build": "npm run build && electron-builder",
    "electron:package": "npm run build && electron-packager . ChaosCipher --platform=win32 --arch=x64 --out=dist_electron --overwrite",
    "app:dev": "concurrently \"npm run dev\" \"wait-on http://localhost:3000 && npm run electron:dev\""
  },
  "build": {
    "appId": "com.chaoscipher.app",
    "productName": "Chaos Cipher",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "electron/**/*"
    ],
    "win": {
      "target": "dir"
    }
  },
  "dependencies": {
    "@google/genai": "^1.38.0",
    "d3-geo": "^3.1.1",
    "lucide-react": "^0.563.0",
    "react": "^19.2.4",
    "react-dom": "^19.2.4",
    "react-simple-maps": "^3.0.0",
    "three": "^0.182.0",
    "topojson-client": "^3.1.0"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "electron": "^40.1.0",
    "electron-builder": "^26.4.0",
    "electron-packager": "^17.1.2",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "wait-on": "^9.0.3"
  }
}
